{
  "extends": "adonis-preset-ts/tsconfig.json",
  "include": [
    "**/*"
  ],
  "exclude": [
    "node_modules",
    "build"
  ],
  "compilerOptions": {
    "outDir": "build",
    "rootDir": "./",
    "sourceMap": true,
    "paths": {
      "App/*": [
        "./app/*"
      ],
      "Config/*": [
        "./config/*"
      ],
      "Contracts/*": [
        "./contracts/*"
      ],
      "Database/*": [
        "./database/*"
      ]
    },
    "types": [
      "@adonisjs/core",
      "@adonisjs/repl",
      "@japa/preset-adonis/build/adonis-typings",
      "@adonisjs/mail",
      "@wahyubucil/adonis-prisma",
      "@adonisjs/view",
      "@adonisjs/auth",
      "@adonisjs/redis",
      "adonis5-jwt",
      "adonisjs-cloudinary",
      "@stouder-io/adonis-scheduler",
      "@adonisjs/drive-s3"
    ]
  }
}